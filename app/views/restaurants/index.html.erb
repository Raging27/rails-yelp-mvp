<div class="container mt-3">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="display-4">Restaurants</h1>
    <%= link_to 'Add New Restaurant', new_restaurant_path, class: 'btn btn-primary' %>
  </div>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @restaurants.each do |restaurant| %>
      <div class="col">
        <div class="card h-100">
          <img src="https://images.pexels.com/photos/262978/pexels-photo-262978.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" class="card-img-top" alt="<%= restaurant.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= link_to restaurant.name, restaurant_path(restaurant), class: 'text-decoration-none' %></h5>
            <p class="card-text"><small class="text-muted">Category: <%= restaurant.category %></small></p>
            <p class="card-text"><small class="text-muted">Reviews: <%= restaurant.reviews.count %></small></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
